{% extends 'IRYAppliBundle:Application:base.html.twig' %}

{% block header_title %}
    {{course.name}}
{% endblock %}

{% block header_back_btn %}
    <a href="{{ path('iry_appli_choixcours', {helicopter_id: course.subTheme.theme.helicopter.id}) }}" id="back_btn">
        <img src="{{ asset('bundles/iryappli') }}/img/fleche_gauche.png" alt="Retour accueil">
    </a>
{% endblock %}

{% block body %}
    <div id="content">
        <section id ="vi" class="cf">
            <div class="video_wrap">
{#                 {% if not course.immersiveMovie is null %}
                {{ include('IRYAppliBundle:ImmersiveApplication:blockUnityPlayer.html.twig', {'pathUnityFile' : '/'~course.immersiveMovie.unityPath}) }}
                {% endif %} #}

            {{ include('IRYAppliBundle:ImmersiveApplication:blockUnityPlayer.html.twig', {'pathUnityFile' : "/uploads/vi/ImmersiveVideo-Webplayer.unity3d"}) }}

            </div>
        </section>
        <section class="schema_image">
            <div class="schema_image_plus"></div>
            <div class="schema_image_wrap">
                <ul class="images">
                    {% for image in images %}
                        <li>
                            <span>{{image.name}}</span>
                            <img class="imgschema" src="/{{image.webPath}}" alt="{{image.name}}">
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </section>
    </div>
    <script>
       var imageUrl = "{{ path("iry_rest_send_image", {url: 0 }) }}";
    </script>
{% endblock %}
