<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta charset="UTF-8">
        <title>{% block title %}IRY{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="favicon.png" />
        <link href="{{ asset('bundles/iryappli/css/ie.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/iryappli/css/print.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/iryappli/css/screen.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/iryappli/css/custom.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/iryappli/css/introjs.css') }}" rel="stylesheet">
        <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    </head>
    <body>

        {% block header %}
            <header id="header" class="cf">
                <div id="header_left" class="left">
                    {% block header_back_btn %}{% endblock %}
                    <div id="logo">
                        <a href="{{ path('iry_appli_home') }}">
                            <img src="{{ asset('bundles/iryappli') }}/img/logo.png" alt="Logo IRY">
                        </a>
                    </div>
                </div>
                <div id="header_center" class="center">
                    <h1>{% block header_title %}{% endblock %}</h1>
                </div>
            </header>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}{% endblock %}
        
        <script type="text/javascript" src="{{ asset('bundles/iryappli/libraries/mustache.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/iryappli/js/script.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/iryappli/js/intro.js') }}"></script>
        <script type="text/javascript">
          document.getElementById('startButton').onclick = function() {
            introJs().start();
          };
        </script>
    </script>
    </body>
</html>	