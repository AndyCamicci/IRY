{% extends 'IRYAppliBundle:Application:base.html.twig' %}
        {% block header %}
            <header id="header" class="cf">
                <div id="header_center" class="center">
                    <div id="logo">
                        <a href="{{ path('iry_appli_home') }}">
                            <img src="{{ asset('bundles/iryappli') }}/img/logo.png" alt="Logo IRY">
                        </a>
                    </div>
                </div>
            </header>
        {% endblock %}
{% block body %}
    <div id="content" class="login">

        <form action="{{ path('login_check') }}" method="post" id="login_form">
            <div class="container cf">
                <label for="username" id="username"></label>
                {# <input type="text" id="username" placeholder="Username" name="_username" value="{{ last_username }}" /> #}
                {{ form_widget(form._username) }}
            </div>
            <div class="container cf">
                <label for="password" id="password"></label>
                {# <input type="password" id="password" placeholder="Password" name="_password" /> #}
                {{ form_widget(form._password) }}
            </div>
            <div class="container cf">
                {{ form_widget(form.serie) }}
            </div>
            {% if error %}
                <div class="error_message"> {{ error.message }}</div>
            {% endif %}
            <button type="submit">Login</button>
        </form>
    </div>
	<script>

		$("form#login_form").bind("submit", function(e) {
			$.cookie("serie", null);
			
			var serie = $(this).find("select").val();
			$.cookie("serie", serie);
			
		});

	</script>
{% endblock %}